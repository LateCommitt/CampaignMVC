@model List<EntityLayer.Concrete.User>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kullanıcılar</h1>
        <a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Email</th>
                <th>Şehir</th>
                <th>Segment</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.City</td>
                    <td>@user.Segment</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
