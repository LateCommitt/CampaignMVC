@model List<EntityLayer.Concrete.CampaignAssignment>
@{
    ViewData["Title"] = "Kampanya Atamaları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kampanya Atamaları</h1>
        <a asp-action="Statistics" class="btn btn-info">İstatistikler</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kullanıcı ID</th>
                <th>Kampanya ID</th>
                <th>Skor</th>
                <th>Durum</th>
                <th>Atama Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model)
            {
                <tr>
                    <td>@assignment.Id</td>
                    <td>@assignment.UserId</td>
                    <td>@assignment.CampaignId</td>
                    <td>@assignment.Score</td>
                    <td>
                        @if (assignment.Status == EntityLayer.Enums.CampaignStatus.ASSIGNED)
                        {
                            <span class="badge bg-warning">@assignment.Status</span>
                        }
                        else if (assignment.Status == EntityLayer.Enums.CampaignStatus.USED)
                        {
                            <span class="badge bg-success">@assignment.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@assignment.Status</span>
                        }
                    </td>
                    <td>@assignment.AssignedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (assignment.Status == EntityLayer.Enums.CampaignStatus.ASSIGNED)
                        {
                            <form asp-action="MarkAsUsed" asp-route-id="@assignment.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success">Kullanıldı Olarak İşaretle</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
