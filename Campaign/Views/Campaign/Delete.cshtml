@model EntityLayer.Concrete.Campaign
@{
    ViewData["Title"] = "Kampanya Sil";
}

<div class="container">
    <h1>Kampanya Sil</h1>

    <h3>Bu kampanyayı silmek istediğinize emin misiniz?</h3>
    <div>
        <h4>Kampanya Detayları</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Tip</dt>
            <dd class="col-sm-10">@Model.Type</dd>

            <dt class="col-sm-2">Hedef Segment</dt>
            <dd class="col-sm-10">@Model.TargetSegment</dd>

            <dt class="col-sm-2">Öncelik</dt>
            <dd class="col-sm-10">@Model.Priority</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
