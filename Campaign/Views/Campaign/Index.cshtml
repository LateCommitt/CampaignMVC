@model List<EntityLayer.Concrete.Campaign>
@{
    ViewData["Title"] = "Kampanyalar";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kampanyalar</h1>
        <a asp-action="Create" class="btn btn-primary">Yeni Kampanya Ekle</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tip</th>
                <th>Hedef Segment</th>
                <th>Öncelik</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var campaign in Model)
            {
                <tr>
                    <td>@campaign.Id</td>
                    <td>@campaign.Type</td>
                    <td>@campaign.TargetSegment</td>
                    <td>@campaign.Priority</td>
                    <td>@campaign.StartDate.ToString("dd.MM.yyyy")</td>
                    <td>@campaign.EndDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (campaign.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@campaign.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <form asp-action="ToggleActive" asp-route-id="@campaign.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm @(campaign.IsActive ? "btn-secondary" : "btn-success")">
                                @(campaign.IsActive ? "Pasif Yap" : "Aktif Yap")
                            </button>
                        </form>
                        <a asp-action="Delete" asp-route-id="@campaign.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
